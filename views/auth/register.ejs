<!-- views/auth/register.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <title>Регистрация</title>
  <link href="/style.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-xl w-full max-w-md p-8">
    <h1 class="text-2xl font-bold mb-6 text-center">Регистрация</h1>

    <% if (error) { %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 mb-4 text-sm space-y-1">
        <% error.split('. ').forEach(msg => { %>
          <% if (msg.trim()) { %><div>• <%= msg.trim() %></div><% } %>
        <% }); %>
      </div>
    <% } %>

    <form action="/register" method="POST" class="space-y-4">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <input type="text" name="name" placeholder="Имя" value="<%= typeof name !== 'undefined' ? name : '' %>" required class="w-full border border-gray-300 rounded-md p-2" />

      <input type="text" name="login" placeholder="Телефон или Email" value="<%= typeof login !== 'undefined' ? login : '' %>" required class="w-full border border-gray-300 rounded-md p-2" autocomplete="on" />

      <input type="password" name="password" placeholder="Пароль" required class="w-full border border-gray-300 rounded-md p-2" />
      <input type="password" name="confirmPassword" placeholder="Повтор пароля" required class="w-full border border-gray-300 rounded-md p-2" />

      <button type="submit" class="w-full bg-gray-800 text-white py-2 mt-2 rounded-md hover:bg-gray-900 transition">Зарегистрироваться</button>
    </form>

    <p class="mt-4 text-center text-sm text-gray-600">
      Уже есть аккаунт? <a href="/login" class="text-black underline">Войти</a>
    </p>
  </div>
</body>
</html>
