<% layout('layout') %>
<% title = 'Главная' %>

      

<div class="max-w-6xl mx-auto space-y-8 p-4">

  <!-- Блок с системой -->
  <div class="bg-white rounded-xl shadow overflow-hidden flex flex-col md:flex-row">
    <img src="/uploads/systems/system_image.jpg" alt="Система" class="md:w-[40%] h-auto object-cover" />
    <div class="p-6 flex-1">
      <h2 class="text-xl font-bold mb-4">Ваша система водоочистки</h2>
      <ul class="space-y-2 text-gray-700">
        <li><strong>Установлена:</strong> 12.03.2023</li>
        <li><strong>Модель:</strong> AquaHome 350</li>
        <li><strong>Средний расход:</strong> 130 л/сутки</li>
        <li><strong>Следующая замена фильтра:</strong> 12.09.2025</li>
      </ul>

      <!-- Добавлен блок скидки -->
      <div class="mt-6 bg-green-50 border border-green-200 rounded-xl shadow p-6 text-center max-w-md mx-auto">
        <div class="text-2xl font-bold text-green-700">Ваша скидка: 10%</div>
        <p class="text-sm text-green-800 mt-2">Персональная скидка активна до 31.12.2025</p>
      </div>
    </div>
  </div>

  <!-- Секция уведомлений и обслуживания -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Уведомления -->
    <div>
      <h2 class="text-lg font-semibold mb-4">Уведомления</h2>
      <div class="space-y-3">
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r shadow-sm">
          <p class="text-sm text-blue-800">Новое коммерческое предложение от менеджера</p>
        </div>
        <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-r shadow-sm">
          <p class="text-sm text-green-800">Ваша персональная скидка обновлена</p>
        </div>
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-r shadow-sm">
          <p class="text-sm text-yellow-800">Плановая проверка — через 3 дня</p>
        </div>
      </div>
    </div>

    <!-- Ближайшее обслуживание -->
    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-lg font-semibold mb-4">Ближайшее обслуживание</h2>
      <table class="w-full text-sm border-t mb-4">
        <thead>
          <tr>
            <th class="py-2 text-left">Тип</th>
            <th class="py-2 text-left">Дата</th>
            <th class="py-2 text-left">До замены</th>
          </tr>
        </thead>
        <tbody>
          <tr><td class="py-2">Картридж</td><td class="py-2">25.04.2025</td><td class="py-2">3 дня</td></tr>
          <tr><td class="py-2">Сервисное обслуживание</td><td class="py-2">06.06.2025</td><td class="py-2">1.5 месяца</td></tr>
          <tr><td class="py-2">Загрузка</td><td class="py-2">25.03.2026</td><td class="py-2">11 месяцев</td></tr>
        </tbody>
      </table>
      <button id="openBookServiceModal" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
        Заказать обслуживание
      </button>
      
      <%- include('../../partials/modals/book-service') %>
      
      <script src="/js/modal.js"></script>
      
      
    </div>
  </div>

  <!-- История заказов -->
  <div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">История заказов</h2>
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дата</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Описание</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Сумма</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200 text-gray-700">
        <tr><td class="px-4 py-2">12.03.2025</td><td class="px-4 py-2">Замена картриджа BB10</td><td class="px-4 py-2">1 500 ₽</td></tr>
        <tr><td class="px-4 py-2">15.01.2025</td><td class="px-4 py-2">Обслуживание системы</td><td class="px-4 py-2">3 000 ₽</td></tr>
        <tr><td class="px-4 py-2">25.11.2024</td><td class="px-4 py-2">Дозаправка соли</td><td class="px-4 py-2">500 ₽</td></tr>
      </tbody>
    </table>
  </div>

  <!-- Рекомендации -->
  <div class="bg-blue-50 border border-blue-100 rounded-xl shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Рекомендуем</h2>
    <p class="text-sm text-gray-700">
      Не забудьте заказать замену угольного фильтра заранее. Это повысит качество воды и продлит срок службы вашей системы.
    </p>
    <a href="/store" class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
      Перейти в магазин
    </a>
  </div>

</div>

